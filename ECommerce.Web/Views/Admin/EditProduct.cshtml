@section Styles {
    <link rel="stylesheet" href="~/css/CreateCourse.css" asp-append-version="true" />

}
    @model Product
<div class="container">
    <div class=" text-center mt-5 d-flex justify-content-between ">

        <h1>Edit Course</h1>
        <a asp-controller="Admin" asp-action="index" >Back To the Admin Page</a>
    </div>


    <div class="row ">
        <div class="col-lg-10 mx-auto">
            <div class="card mt-2 mx-auto p-4 bg-light">
                <div class="card-body bg-light">

                    <div class="container">
                   
                        <form method="post" enctype="multipart/form-data">
                            <div class="controls" style="height:400px;">

                                <div class="row mb-4">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="form_name">Course Name *</label>
                                            <input asp-for="@Model.Name" type="text" name="name" class="form-control" placeholder="Please enter your Course Name *" required="required" data-error="Course Name is required.">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="form_lastname">Price *</label>
                                            <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="Please enter Course Price eg:10000 *" required="required" data-error="Course Price is required.">
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-4">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label asp-for="@Model.Image">Image *</label>
                                            <input asp-for="@Model.Image" type="file" class="form-control" placeholder="Please enter your image *"  data-error="Valid File is required.">

                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-4">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label asp-for="@Model.Description">Message *</label>
                                            <textarea asp-for="@Model.Description" class="form-control" placeholder="Write your course description here." rows="4" required="required" data-error="Please, Write Course Description"></textarea>
                                        </div>
                                    </div>


                                    <div class="col-md-12 mt-3">
                                        <input type="submit" class="btn btn-success btn w-100  pt-2 btn-block" value="Edit Course">
                                    </div>

                                </div>
                            </div>
                        </form>
                        <img src="@Model.Image"
                             class="card-img-top" />
                    </div>


                </div>

            </div>

        </div>
    </div>
